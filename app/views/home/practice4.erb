		<script type="text/javascript">

		$(document).ready(function()
		{
            Date.prototype.addDays = function(days)
            {
                var dat = new Date(this.valueOf());
                dat.setDate(dat.getDate() + days);
                return dat;
            }
            var dat = new Date();
                       
			$('#min-date').bootstrapMaterialDatePicker({ format : 'DD/MM/YYYY HH:mm', minDate : new Date(), maxDate : dat.addDays(3) });
			$.material.init()
		
		    $("#min-date").val();
		    
		    var clicks = 0;
			$(".dtp-btn-ok").click(function(){
                 if(clicks == 2){ 
                           /*ajax 시작*/
                           $.ajax({
                                data: {
                                    name: $("#min-date").val()

                                },
                                url: "/home/reservation",
                                success: function(data){
                                    alert("<%= @a %>");
                                }
                            });
                            /*ajax 끝*/
                     
                     clicks = 0;
                 }
                 else{
                     clicks++;
                 }
            });
            
            
     
	
            
            
            
            
            
		});
		</script>