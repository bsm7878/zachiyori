                    </div>
                    <% flash.each do |key, value| %>
                      <span class="label label-success" style = "margin-left:35px; font-size:12px;"><%= value %></span>
                    <% end %>
                    <hr>
                    <div class = "row">
                        <div class  = "col-md-3"></div>
                        <div class  = "col-md-6">
                            
                        <% unless current_user.privacy.nil? %>
                            <form action = "/home/adjust_privacy_save" method = "get">
                              <div class="form-group">
                                <label for="name">이름</label><br />
                                <input class="form-control" name ="adjust_name" value = "<%= current_user.privacy.name %>" type="text" id="name" placeholder ="변경된 주문자 이름을 적어주세요"/>
                              </div>
                              <div class="form-group">
                                <label for="phone">핸드폰번호</label><br />
                                <input class="form-control"  name ="adjust_phone" value = "<%= current_user.privacy.phone %>"  type="text" id="phone" placeholder ="변경된 핸드폰번호를 적어주세요" />
                              </div>
                              <div class="form-group">
                                <label for="public_pw">공동현관 비밀번호</label><br />
