<div class = "container" >
<!-- date search form start -->
            <div class = "row" style = "margin-top: 40px; height: 45px;">
              <div class = "col-md-6"></div>
              <form action = "/home/order/<%= params[:id] %>" method = "get">
                <div class = "col-md-2">
                  <input class = "form-control" name = "start_date" type = "text" placeholder = "언제부터">
                </div>
                <div class = "col-md-1">
                  <div style = "margin-top:5px; font-size:20px; text-align: center;">~</div>
                </div>
                <div class = "col-md-2">
                  <input class = "form-control" name = "end_date" type = "text" placeholder = "언제까지">
                </div>
                <div class = "col-md-1">
                  <button type = "submit" class  = "form-control">검색</button>
                </div>
              </form>
            </div>
            <!-- date search form end -->
            
            <!-- order list && summary start -->
            <div class = "row" style = "margin-top:40px;">
              <!-- order list start -->
              <div class = "col-md-8">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>결제날짜</th>
                      <th>배달날짜</th>
                      <th>주문자</th>
                      <th>주문메뉴</th>
                      <th>결제금액</th>
                      <th>수수료</th>
                      <th>부과가치세</th>
                      <th>입금금액</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% unless params[:start_date].nil? %>
                      <% Purchase.where(:menu_id => @mart_menu).where(:created_at => params[:start_date].to_datetime...params[:end_date].to_datetime+1.days).each do |c| %>
                        <tr>
                          <th scope="row"><%= c.created_at.to_s.split[0] %></th>
                          <th><%= c.deliver_time %></th>
                          <td>
                            <% unless User.where(:id => c.user_id).nil? %>
                              탈퇴회원
                            <% else %>
                              <%= User.find(c.user_id).privacy.name.sub(User.find(2).privacy.name.split(//)[1], '*') %>
                            <% end %>
                          </td>
                          <td><%= Menu.find(c.menu_id).menu_name %></td>
                          <td><%= number_with_delimiter(c.total_price, :delimiter => ',')  %></td>
                          <td>500</td>
                          <td>500</td>
                          <td>4,000</td>
                        </tr>
                      <% end %>
                      <% else %>
                        <tr>
                          <th scope="row">날짜를 입력해주세요</th>
                          <th></th>
                          <th></th>
                          <th></th>
                          <th></th>
                          <th></th>
                          <th></th>
                          <th></th>
                        </tr>
                    <% end %>
                  </tbody>
                </table>                  
              </div>
              <!-- order list end -->
              
              <!-- summary start -->
              <div class = "col-md-4">
                <div class="thumbnail">
                  <div class="caption">
                    <div class = "row">
                      <div class = "col-md-4">
                        
                      </div>
                      <div class = "col-md-8" style = "text-align: right;">
                        <% unless params[:start_date].nil? %>
                          <%= params[:start_date] %> ~ <%= params[:end_date] %>
                        <% else %>
                          검색 날짜를 지정해주세요
                        <% end %>
                      </div>
                    </div>
                    <hr>
                    <div class = "row">
                      <div class = "col-md-4">
                        <span class = "bold" style = "font-size:22px; ">매출건수</span>
                      </div>
                      <div class = "col-md-8" style = "text-align: right; font-size:22px;">
                        <% unless params[:start_date].nil? %>
                          <span><%= Purchase.where(:menu_id => @mart_menu).where(:created_at => params[:start_date].to_datetime...params[:end_date].to_datetime+1.days).all.count %>건</span>
                        <% else %>
                          <span>0건</span>
                        <% end %>
                      </div>
                    </div>
                    <div class = "row" style = "margin-top:25px;">
                      <div class = "col-md-5">
                        <span class = "bold" style = "font-size:22px; ">결제총액</span>
                      </div>
                      <div class = "col-md-7" style = "text-align: right; font-size:22px;">
                        <% unless params[:start_date].nil? %>
                          <span><%= number_with_delimiter(Purchase.where(:created_at => params[:start_date].to_datetime...params[:end_date].to_datetime+1.days).sum(:total_price), :delimiter => ',')  %>원</span>
                        <% else %>
                          <span>0원</span>
                        <% end %>
                      </div>
                    </div>
                    <hr>
                    <div class = "row"  style = "text-align:center; margin-top:30px;">
                      <h2 class = "bold">도와주셔서</h2>
                      <h2 class = "bold">항상 감사합니다.</h2>
                    </div>
                  </div>
                </div>
              </div>
               <!-- summary end -->
               
            </div>
            <!-- order list && summary end -->
            
    </div>          
