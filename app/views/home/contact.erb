                    </div>
                    
                    <% flash.each do |key, value| %>
                      <span class="label label-success" style = "margin-left:35px; font-size:12px;"><%= value %></span>
                    <% end %>
                    <hr>
                    
                    <!-- content -->
                    <div style = "margin-top:15px; margin-bottom:1px; height:430px;">
                        <div class = "row">
                            <div class = "col-md-1"></div>
                            <div class = "col-md-10">
                             <form action = "/home/email_send" method = "post">
                                  <div class="form-group">
                                    <label for="sender_person">받는사람</label>
                                    <div>&nbsp;jachiyori@naver.com</div>
                                  </div> 
                                  <div class="form-group">
                                    <label for="sender_person">보내는사람</label>
                                    <% if user_signed_in? %>
                                        <input type = "email" class = "form-control" name = "flyer" id = "sender_person" value = "<%= current_user.email %>" placeholder = "연락받으실 e-mail을 입력해주세요" > 
                                    <% else %>
                                        <input type = "email" class = "form-control" name = "flyer" id = "sender_person" placeholder = "연락받으실 e-mail을 입력해주세요" > 
                                    <% end %>
                                  </div>
                                  <div class = "form-group">
                                      <label for="content">보내는사람</label>
                                      <textarea class = "form-control" id = "content" name = "content" placeholder = "어떠한 내용이든 괜찮습니다! 저희는 혼좀 나야 정신차립니다!" rows="8"></textarea>
                                  </div>
                                  <div style = "text-align:center;">
                                      <button type="submit" class="btn btn-default" data-dismiss="modal" style = "background-color:white; color:black;">보내기</button>
                                  </div>
                             </form>
                           </div>
                           <div class = "col-md-1"></div>
                        </div>
                    </div>
                    
                </div>
                
            </div>
