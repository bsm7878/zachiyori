                            <select class="form-control" id ="wanted_time" name = "wanted_time">
                              <% if @deliver_5 < @deliver_amount &&  @deliver_7 < @deliver_amount %>
                                  <option value = "<%= @five_time %>">오늘 오후 5시 - 오후 6시</option>
                                  <option value = "<%= @seven_time %>">오늘 오후 7시 - 오후 8시</option>
                              <% elsif @deliver_5 >= @deliver_amount &&  @deliver_7 < @deliver_amount %>
                                  <option value = "<%= @five_time %>" disabled>오늘 오후 5시 - 오후 6시 (당일 해당시간에 주문가능한 수량이 모두 소진되었습니다. )</option>
                                  <option value = "<%= @seven_time %>">오늘 오후 7시 - 오후 8시</option>
                              <% elsif @deliver_5 < @deliver_amount &&  @deliver_7 >= @deliver_amount %>
                                  <option value = "<%= @five_time %>">오늘 오후 5시 - 오후 6시</option>
                                  <option value = "<%= @seven_time %>" disabled>오늘 오후 7시 - 오후 8시 (당일 해당시간에 주문가능한 수량이 모두 소진되었습니다. )</option>
                              <% else %>
                                  <optgroup label="오늘 준비한 물량이 모두 소진되어 다음날 예약주문만 가능합니다.">
                                  <option value = "<%= @next_five_time %>">내일 오후 5시 - 오후 6시</option>
                                  <option value = "<%= @next_seven_time %>">내일 오후 7시 - 오후 8시</option>      
                              <% end %>
                            </select>
                        <% elsif Time.zone.now.between?(Time.zone.now.midnight + 16.hours + 30.minute, Time.zone.now.midnight + 18.hours + 30.minute) %> <!--오후 4:30분 ~ 오후 6:30분 -->
                            <select class="form-control" id ="wanted_time" name = "wanted_time">  
                              <% if @deliver_7 < @deliver_amount %>
                                  <option value = "<%= @five_time %>" disabled>오늘 오후 5시 - 오후 6시 (주문 가능한 시간이 종료되었습니다.)</option>
                                  <option value = "<%= @seven_time %>">오늘 오후 7시 - 오후 8시</option>
                              <% else %>
                                  <option value = "<%= @five_time %>" disabled>오늘 오후 5시 - 오후 6시 (주문 가능한 시간이 종료되었습니다.)</option>
                                  <option value = "<%= @seven_time %>" disabled>오늘 오후 7시 - 오후 8시 (당일 해당시간에 주문 가능한 수량이 모두 소진되었습니다. )</option>
                                  <optgroup label="오늘 준비한 물량이 모두 소진되어 다음날 예약주문만 가능합니다.">
                                  <option value = "<%= @next_five_time %>">내일 오후 5시 - 오후 6시</option>
                                  <option value = "<%= @next_seven_time %>">내일 오후 7시 - 오후 8시</option>   
                              <% end %>
                            </select>
                        <% elsif Time.zone.now.between?(Time.zone.now.midnight + 18.hours + 30.minute, Time.zone.now.midnight + 24.hours) %> <!--오후 6:30분 ~ 오늘자정 -->
                             <select class="form-control" id ="wanted_time" name = "wanted_time">
                              <% if @deliver_next_5 < @deliver_amount && @deliver_next_7 < @deliver_amount %>
                                  <option value = "<%= @next_five_time %>">내일 오후 5시 - 오후 6시</option>
                                  <option value = "<%= @next_seven_time %>">내일 오후 7시 - 오후 8시</option>
                              <% elsif @deliver_next_5 < @deliver_amount && @deliver_next_7 >= @deliver_amount %>
